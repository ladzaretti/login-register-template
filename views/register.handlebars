<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        Register
      </h1>
      {{> messages}}

      <form action="/users/register" method="POST">
        <div class="mb-3">
          <label class="form-label" for="name">Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            {{#if name}}
                value={{name}}
            {{else}}
                value=""
            {{/if}}
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            {{#if email}}
                value={{email}}
            {{else}}
                value=""
            {{/if}}
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            {{#if password}}
                value={{password}}
            {{else}}
                value=""
            {{/if}}
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            {{#if password2}}
                value={{password2}}
            {{else}}
                value=""
            {{/if}}
          />
        </div>
        <button type="submit" class="btn btn-primary d-block w-100">
          Register
        </button>
      </form>
      <p class="mt-4">Have An Account? <a href="/users/login">Login</a></p>
    </div>
  </div>
</div>